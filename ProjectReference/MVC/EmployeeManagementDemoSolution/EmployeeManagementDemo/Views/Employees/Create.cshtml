@model EmployeeManagementDemo.Models.Employee
 <!--                                ^ Virtual table 

  this line of code mention that this Belong to the controller Employess
  or
 this line speccifies the model type that this view expects . in this case , the view expects an instance of EmployeeClass from the EmployeeManagementDemo.Models Namespace
 -->

@{
    <!--This line is the Razor code block that allows you to write the C# code within the View -->
    ViewData["Title"] = "Create";
}



<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
   
        <form asp-action="Create">
            <!-- This is an HTML form element . The aspAction attribute specifies the action method in the controller that will handle the submission form -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <!--This label element display the label for the Name input field  -->
                <input asp-for="Name" class="form-control" id="Name" />                  
                <!-- The  asp-for attribute is a taghelper that generates the appropriate input element based on the datatype of the property  -->
                <span asp-validation-for="Name" class="text-danger" id="nameErrorSpan"></span>
                <!--This div element displays model-level validation error if any occurs during the form summision  -->
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Designation" class="control-label"></label>
                <input asp-for="Designation" class="form-control"id="Designation" />
                <span asp-validation-for="Designation" class="text-danger" id="DesignationErrorSpan" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="btnSave" class="btn btn-primary" />

                <!-- This input element represent the Submit button for the form  -->
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- this defines a section in the view where the script reference can be included . in this case , it include partial view "__ValidationScriptsPartial" for the client side validation Script  -->
}
