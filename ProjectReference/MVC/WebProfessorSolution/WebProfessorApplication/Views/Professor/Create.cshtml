@model WebProfessorApplication.Models.Professor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Professor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ManagerId" class="control-label"></label>
                <input asp-for="ManagerId" class="form-control" id="ManagerIdInp" />
                <span asp-validation-for="ManagerId" class="text-danger" id="ManagerIdSpan"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" id="FirstNameInp" />
                <span asp-validation-for="FirstName" class="text-danger" id="FirstNameSpan"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" id="LastNameInp" />
                <span asp-validation-for="LastName" class="text-danger" id="LastNameSpan"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeptNo" class="control-label"></label>
                <select asp-for="DeptNo" id="DeptNo">
                    <option value="0">Choose</option>
                    <option value="1">Physics</option>
                    <option value="2">Biology</option>
                </select>
                <!--  <input asp-for="DeptNo" class="form-control" /> -->
                <span asp-validation-for="DeptNo" class="text-danger" id="DeptNoSpan" ></span>
            </div>

            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger" id="SalarySpan" ></span>
            </div>

            <div class="form-group">
                <label asp-for="JoiningDate" class="control-label"></label>
                <input type = "date" asp-for="JoiningDate" />
                <span asp-validation-for="JoiningDate" class="text-danger" id="JoiningDateSpan"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dob" class="control-label"></label>
                <input type="date" asp-for="Dob" id="Dob" />
                <span asp-validation-for="Dob" class="text-danger" id="DobSpan" ></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <b>Male :</b>
                <input type="radio" value="M" asp-for="Gender" id="malecheckbox" />
                <b>Female:</b>
                <input type="radio" value="F" asp-for="Gender" id="femalecheckbox" />
                <span asp-validation-for="Gender" class="text-danger" id="GenderSpan"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="CreateBtn" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/CreateForm.js" asp-append-version="true"></script>
}
